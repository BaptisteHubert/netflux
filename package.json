{
  "name": "netflux",
  "description": "Abstract peer to peer client transport API. Implementations based on WebRTC and webSocket to be done.",
  "main": "dist/netflux.es2015.umd.js",
  "jsnext:main": "dist/netflux.es2015.js",
  "version": "0.9.1",
  "scripts": {
    "prebuild": "rm -rf coverage dist tmp",
    "build": "node rollup.config.js",
    "preprocesses": "node test/utils/rollup.config.js",
    "processes": "pm2 start process.yml || pm2 restart process.yml",
    "bundle-tests": "node test/rollup.config.js",
    "pretest:browsers": "npm run build && npm run processes",
    "test:browsers": "karma start",
    "pretest": "npm run pretest:browsers && npm run bundle-tests",
    "test": "node jasmine.conf.js && karma start",
    "test:chrome": "npm run test:browsers -- --browsers Chrome",
    "test:firefox": "npm run test:browsers -- --browsers Firefox",
    "test:node": "npm run pretest && node jasmine.conf.js",
    "test:coverage": "npm run pretest && node jasmine.conf.js && karma start karma.conf.coverage.js",
    "test:travis": "npm run pretest && node jasmine.conf.js && karma start karma.conf.travis.js",
    "predoc:deploy": "json -I -f jsdoc.json -e \"this.templates.systemName=\\\"Netflux `git describe --abbrev=0 --tags`\\\"\" && npm run docdev",
    "doc": "jsdoc -d doc -c jsdoc.json -t ./node_modules/ink-docstrap/template -R README.md -r src",
    "doc:dev": "jsdoc -d doc -p -c jsdoc.json -t ./node_modules/ink-docstrap/template -R README.md -r src",
    "doc:deploy": "./jsdoc.deploy.sh",
    "postdoc": "mkdir -p doc/doc && cp -f doc/uml.png doc/doc/",
    "postdoc:dev": "mkdir -p doc/doc && cp -f doc/uml.png doc/doc/",
    "postdoc:deploy": "json -I -f jsdoc.json -e 'this.templates.systemName=\"Netflux\"'",
    "commit": "git-cz",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/coast-team/netflux.git"
  },
  "keywords": [
    "netflux",
    "webRTC",
    "p2p",
    "peer",
    "network"
  ],
  "author": "Philippe Kalitine <philippe.kalitine@gmail.com> (http://philippe.kalitine.name/)",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/coast-team/netflux/issues"
  },
  "homepage": "https://github.com/coast-team/netflux#readme",
  "config": {
    "ghooks": {
      "pre-commit": "npm run test:coverage"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "text-encoding": "^0.6.0",
    "webrtc-adapter": "^2.0.2",
    "ws": "^1.1.1"
  },
  "optionalDependencies": {
    "wrtc": "0.0.60"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "commitizen": "^2.4.6",
    "cz-conventional-changelog": "^1.1.5",
    "ghooks": "^1.0.1",
    "ink-docstrap": "^1.1.2",
    "istanbul": "^0.4.3",
    "jasmine": "^2.4.1",
    "jasmine-core": "^2.4.1",
    "jasmine-spec-reporter": "^2.5.0",
    "jsdoc": "^3.4.0",
    "json": "^9.0.3",
    "karma": "^1.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.0.0",
    "karma-coverage-es6": "^0.2.7",
    "karma-firefox-launcher": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-rollup-preprocessor": "^2.0.2",
    "karma-spec-reporter": "0.0.26",
    "pm2": "^2.0.12",
    "rollup": "^0.36.0",
    "rollup-plugin-filesize": "^0.5.5",
    "rollup-plugin-includepaths": "^0.1.5",
    "rollup-plugin-istanbul": "^1.0.0",
    "rollup-plugin-multi-entry": "^2.0.1",
    "rollup-plugin-string": "^2.0.2",
    "semantic-release": "^4.3.5",
    "sigver": "^7.1.0",
    "standard": "^8.0.0"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "netflux",
      "jasmine",
      "describe",
      "xdescribe",
      "it",
      "xit",
      "expect",
      "beforeEach",
      "afterEach",
      "beforeAll",
      "afterAll",
      "spyOn",
      "DOMException",
      "RTCPeerConnection",
      "RTCSessionDescription",
      "RTCDataChannel",
      "RTCIceCandidate",
      "WebSocket",
      "TextEncoder",
      "TextDecoder",
      "Event",
      "CloseEvent"
    ],
    "ignore": [
      "dist/*",
      "karma*.js"
    ]
  }
}
