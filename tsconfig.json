{
  "compilerOptions": {
    "outDir": "build/",
    "allowJs": true,
    "target": "es5",
    "module": "es6",
    "lib": [ "es2016", "dom" ],
    "moduleResolution": "node",
    "downlevelIteration": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "!node_modules/@types"
  ]
}
