{
  "compilerOptions": {
    "outDir": "build/",
    "allowJs": true,
    "target": "es5",
    "module": "es6",
    "lib": [ "es6", "es7", "es2015", "es2016", "es2017", "dom" ],
    "moduleResolution": "node",
    "downlevelIteration": true,
    "types": ["text-encoding", "node"]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "!node_modules/@types"
  ]
}
